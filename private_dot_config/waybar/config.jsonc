{
  "layer": "top",
  "position": "top",
  "reload_style_on_change": true,
  "modules-left": ["clock", "hyprland/workspaces" /*, "tray"*/],
  "modules-center": ["cava"],
  "modules-right": [
    "group/expand",
    "group/netbt",
    // "bluetooth",
    // "network",
    "battery",
  ],

  "hyprland/workspaces": {},

  "clock": {
    "format": "{:%I:%M %p} ",
    "interval": 1,
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "format": {
        "months": "<span color='#BABEC5'><b>{}</b></span>",
        "weekdays": "<span color='#8B8E92'><b>{}</b></span>",
        "today": "<span color='#80807F'><b><u>{}</u></b></span>",
      },
    },
  },

  "network": {
    "format-wifi": "Ôá´",
    "format-ethernet": "Óºâ",
    "format-disconnected": "Ó¨Å",
    "tooltip-format-disconnected": "Error",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "tooltip-format-ethernet": "{ifname} üñß ",
    "on-click": "kitty nmtui",
  },

  "bluetooth": {
    "format-on": "Û∞ÇØ",
    "format-off": "BT-off",
    "format-disabled": "Û∞Ç≤",

    "tooltip-format": "disconnected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "on-click": "kitty bluetui",
  },

  "battery": {
    "interval": 30,
    "states": {
      "good": 95,
      // "warning": 30,
      "critical": 20,
    },

    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% Û∞ÇÑ",
    "format-plugged": "{capacity}% Û∞ÇÑ Ó¨≠",

    "format-icons": ["Û∞Åª", "Û∞Åº", "Û∞Åæ", "Û∞ÇÄ", "Û∞ÇÇ", "Û∞Åπ"],
  },

  "group/netbt": {
    "orientation": "horizontal",
    "modules": ["network", "bluetooth"],
  },

  "custom/wallpaper": {
    "format": " ÔÄæ  ",
    "tooltip": false,
    "on-click": "waypaper",
  },

  "custom/expand": {
    "format": "ÔÑÑ",
    "tooltip": false,
  },

  "custom/endpoint": {
    "format": "|",
    "tooltip": false,
  },

  "group/expand": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 600,
      "transition-to-left": true,
      "click-to-reveal": true,
    },
    "modules": ["custom/expand", "pulseaudio", "backlight", "custom/endpoint"],
  },

  "cava": {
    "cava_config": "$XDG_CONFIG_HOME/cava/config",
    "bars": 30,
    "hide_on_silence": false,
    "format_silent": "",
    "sleep_timer": 5,
    "bar_delimiter": 0,
    "noise_reduction": 0.77,
    // "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"],
    "format-icons": ["‚†Å", "‚†É", "‚†á", "‚°á", "‚°è", "‚°ü", "‚°ø", "‚£ø"],
    "actions": {
      "on-click-right": "mode",
    },
  },

  "pulseaudio": {
    "format": "{volume}% Û∞ïæ",
    "format-muted": "{volume}% Óª®",
  },

  "backlight": {
    "format": "{percent}% Û∞Éù",
  },

  "tray": {
    "icon-size": 11,
    "spacing": 5,
    "tooltip-format": "{app_id}",
    "ignore-list": ["Firewall"],
  },
}
