  "position": "top",
  "reload_style_on_change": true,
  "modules-left": ["clock", "tray"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["group/expand","bluetooth","network","battery"],


  "hyprland/workspaces": {
